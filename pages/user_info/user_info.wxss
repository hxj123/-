Page{
  width: 100%;
  height: 100%;
}

.func_block{
  height: 100rpx;
  width: 100%;
  padding: 10rpx 0;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
  justify-content: space-between
}

.func_block text{
  font-size: 33rpx;
}

.block_left{
  display: flex;
  margin-left: 40rpx;
  flex-direction: row;
  align-items: center;
}

.block_left image{
  margin-right: 40rpx;
  width: 56rpx;
}
radio{
