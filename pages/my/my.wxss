page{
  width: 100%;
  height: 100%;
  background: #eee;
}

.my{
  width: 100%;
}

.userInfo{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #c2492e;
  padding-bottom: 10rpx;
  color: white;
  margin-bottom: 20rpx;
}

.headImage{
  overflow: hidden;
  display:block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #eee;
  margin-bottom: 20rpx;
}

.func_block{
  height: 100rpx;
  width: 100%;
  padding: 10rpx 0;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.func_block text{
  font-size: 33rpx;
}

.block_left{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  align-items: center;
}

.block_left image{
  margin-right: 30rpx;
  width: 56rpx;
}

.enter{
  width: 50rpx;
  margin-right: 20rpx;
}