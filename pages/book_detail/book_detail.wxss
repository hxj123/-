/* pages/book_detail/book_detail.wxss */
.image-area image{
    width: 100%;
}
.bottom-bar {
    width: 100%;
    height: 50px;
    background: #ffffff;
    position: fixed;
    bottom:0;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1px solid rgb(219, 219, 219);
}
.bottom-bar image {
    height: 40px;
}
.bottom-bar .call {
    width: 40px;
}
.bottom-bar text {
    font-size: 25px;
    font-weight: bold;
    color: #c2492e;
}
.centerColumn{
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}
.text-description {
    display: flex;
    flex-direction: column;
    padding: 0 10px 10px 10px;
    float: left;
    font-size: 16px;
}
.text-description .title {
    font-size: 20px;
    font-weight: bold;
}
.text-description .detail {
    color: #aaa;
    display: flex;
    flex-direction: column;
}
.text-description .condition {
    color: #000;
}
.text-description .detail text {
    width: 100%;
}
