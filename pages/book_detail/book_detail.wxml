<!--pages/book_detail/book_detail.wxml-->
<view class="container">
    <scroll-view scroll-y style="height: {{scrollHeight}}px;">
        <view class="image-area">
            <image src="{{book.photo}}" mode="widthFix"></image>
        </view>
        <view class="text-description">
            <text class="title">{{book.bookName}}</text>
            <view class="detail">
                <text>作者：{{book.author}}</text>
                <text>出版社：{{book.press}}</text>
                <text wx:if="{{book.bookType === '教科类'}}">适用年级：{{book.suitGrade}}</text>
                <text wx:if="{{book.bookType === '教科类'}}">适用学院：{{book.suitCollege}}</text>
                <text wx:if="{{book.bookType === '教科类'}}">适用课程：{{book.suitCourse}}</text>
            </view>
            <view class="detail condition">
                <text>成色：{{book.bookCondition}}</text>
                <text>交易地点：{{book.tradePlace}}</text>
                <text>联系电话：{{book.sellerPhone}}</text>
            </view>
            <view class="detail">
                <text>*备注：{{book.remarks}}</text>
            </view>
        </view>
    </scroll-view>
    <view class="bottom-bar">
        <image class="call" src="../../image/call.png" style="padding-left: 10px;" bindtap="call"></image>
        <image mode="aspectFit" src="../../image/buy.png" catchtap="buy"></image>
        <text style="padding-right: 10px;">￥{{book.price}}</text>
    </view>
</view>
