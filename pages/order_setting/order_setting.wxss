Page{
  width: 100%;
  height: 100%;
}

.block_text{
  margin:0 50rpx;
  font-size: 32rpx;
}

input{
  flex:1;
  text-align:right;
  margin:0 50rpx 0 120rpx;
  font-size: 32rpx;
  color: rgb(71, 71, 71)
}

.block{
  height: 90rpx;
  width: 100%;
  padding: 10rpx 0;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

button{
  width: 90%;
  margin-top: 25px;
  font-size: 36rpx;
  color: white;
  background: #c2492e;
}

.other-button-hover {
  background: #c55941;
}